<OR-Mapping>
    <jdbc>
        <property>
            <name>driver_class</name>
            <value>org.sqlite.JDBC</value>
        </property>
        <property>
            <name>url_path</name>
            <value>jdbc:sqlite:D:\\SQLite\\userlist.db3</value>
        </property>
        <property>
            <name>db_username</name>
            <value>root</value>
        </property>
        <property>
            <name>db_password</name>
            <value>password</value>
        </property>
    </jdbc>
    <class>
        <name>UserBean</name>
        <table>user</table>
        <id>userName</id>
        <property>
            <name>userId</name>
            <column>userid</column>
            <type>String</type>
            <lazy>true</lazy>
        </property>
        <property>
            <name>userName</name>
            <column>username</column>
            <type>String</type>
            <lazy>false</lazy>
        </property>
        <property>
            <name>userPass</name>
            <column>userpassword</column>
            <type>String</type>
            <lazy>true</lazy>
        </property>
    </class>
    <class>
        <name>RoleBean</name>
        <table>roles</table>
        <id>roleId</id>
        <property>
            <name>roleId</name>
            <column>id</column>
            <type>int</type>
            <lazy>false</lazy>
        </property>
        <property>
            <name>roleName</name>
            <column>role_name</column>
            <type>String</type>
            <lazy>false</lazy>
        </property>
    </class>
</OR-Mapping>